<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark db-dark">
        <div class="container">
          <span class= "grey">
            <%= link_to "Bookers", root_path,class:"link" %>
          </span>
          <div class="collapse navbar-collapse" id="nabvarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "Home", user_path(current_user.id), class:"link fas fa-home" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Users", users_path, class:"link fas fa-users" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Books", books_path, class:"link fas fa-book-open"  %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", destroy_user_session_path, class:"link fas fa-sign-out-alt" , method: :delete %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Home", root_path, class:"link fas fa-home" %>
                </li>
                <li class="nav-item">
                  <%= link_to "About", home_about_path, class:"link fas fa-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Sign up", new_user_registration_path, class:"link fas fa-user-plus" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log in", new_user_session_path, class:"link fas fa-sign-in-alt" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
