<div class="container px-5 px-sm-0">
  <div class="row">
    <h2 class="mt-3">User info</h2>
    <%= attachment_image_tag user, :profile_image , :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th>
           <%= user.name %>
          </th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction  %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <% if user.id == current_user.id %>
        <p><%= link_to "Edit", edit_user_path(user), class:"link btn btn-success fas fa-user-cog" %></p>
      <% end %>
    </div>
  </div>
</div>
