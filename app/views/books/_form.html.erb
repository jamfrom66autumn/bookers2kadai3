<div class="container px-5 px-sm-0">
  <div class="row">
    <h2 class="mt-3">New book</h2>
    <%= form_with model: book, local:true do |book| %>
    <%= render 'layouts/error_messages', model: book.object %>
    <div class="form-group">
      <label class="book_title">Title</label>
      <%= book.text_field :title %>
    </div>
    <div class="form-group">
      <label class="book_opinion">Opinion</label>
      <%= book.text_area :body %>
    </div>
    <div class="form-group">
      <%= book.submit 'Create Book', class:"link btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
