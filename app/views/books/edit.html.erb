
<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |book| %>
<%= render 'layouts/error_messages', model: book.object %>

  <h4>Title</h4>
  <%= book.text_field :title %>
  <h4>Body</h4>
  <%= book.text_area :body %>

  <%= book.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", "/books" %>